.col-lg-12: .row
  .navbar.navbar-inverse(role='navigation')
    .container-fluid
      .navbar-header
        a(href='/').navbar-brand Catalog 

      form.navbar-form.navbar-right
        .form-search.search-only
          i.search-icon.glyphicon.glyphicon-search
          input(ng-model='q' ng-keypress='onKeyPress($event)' placeholder='Search for a movie...').form-control.search-query

.col-lg-12(ng-hide='movies.length || (searching)' ng-show='!movies.length')
  .jumbotron
    .jumbotron-contents.text-center
      h1 Start your travel typing a movie name... 

.col-lg-12(ng-hide='!searching' ng-show='searching')
  .jumbotron
    .jumbotron-contents.text-center
      h1 Searching, wait for a second... 

.col-lg-12(ng-hide='!movies.length' ng-show='movies.length')
  h2 Results
  hr
  .row(ng-repeat='shelf in shelfs')
    .col-sm-6.col-md-3(ng-repeat="movie in shelf")
      .thumbnail
        img.img-rounded(src="{{movie.posters.detailed}}")
        .caption.text-center
          a(href='/detail/{{movie.id}}'): h2 {{movie.title}}
          p
            label Year
              | {{movie.year}}
          p
            label Duration:
              | {{movie.runtime}}
          p {{movie.critics_consensus}}
          hr
          p
            a(href='/detail/{{movie.id}}').btn.btn-primary See more
